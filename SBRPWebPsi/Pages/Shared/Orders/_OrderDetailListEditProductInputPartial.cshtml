
<div id="dvPtSingleInput">
    <div class="p-10 table table-border-radius ">
        <div class="">
            <div class="row">
                <div class="col-1">
                    &nbsp;
                </div>
                <div class="form-group col-1">
                    <input type="number" id="txtPtQty_Default" placeholder="件數" class="form-control" />
                </div>
                <div class="form-group col-4">
                    <input type="text" class="form-control form-IDField"
                           id="txtPtProductId_SingleInput"
                           placeholder="請輸入貨號" />
                </div>

                <div class="form-group col-3">
                    <button type="button" class="btn btn-primary" 
                            id="btnPtProductId_SingleInput"
                            data-toggle="title" title="（快速鍵：Enter）">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        快速輸入
                    </button>
                </div>
                <div class="col-1">
                    <button id="btnPtRefreshDetail" type="button"
                            class="btn btn-shell btn-refresh d-none">
                        重新整理
                    </button>
                </div>
                <div class="col-1">
                    <button id="btnPtAddDetail" type="button"
                            title="（快速鍵：Alt + A）"
                            class="btn btn-shell btn-adddetail">
                        @WebBaseUI.Form_Btn_AddDetailEntry
                    </button>
                </div>
            </div>


        </div>
    </div>
</div>