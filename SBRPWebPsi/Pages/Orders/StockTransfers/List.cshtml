@page
@model SBRPWebPsi.Pages.Orders.StockTransfers.ListModel
@{
}


<div class="container-fluid">
    <partial name="~/Pages/Shared/GeneralPages/_PageHeaderPartial.cshtml" model="Model.PG_PageHeaderInfo" />
</div>



<form id="form1" method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- start card -->
                <div class="card page-card">

                    <div class="card-header">
                        <div class="form-function bg-list-filter">
                            <div class="items">&nbsp;</div>
                            <div class="items">&nbsp;</div>
                            <div class="items">&nbsp;</div>
                            <div class="items">&nbsp;</div>
                            <div class="items">
                                <label for="txtSupplierId">
                                    @Store.GetDisplayName(c => c.StoreId)
                                </label>
                                
                            </div>
                            <div class="items">
                                <label for="txtSupplierName">
                                    @Store.GetDisplayName(c => c.StoreName)
                                </label>
                                
                            </div>
                        </div>



                        <!--附帶或次要功能連結或按鈕-->
                        <div class="form-function bg-list-control">
                            <div class="items"></div>
                            <div class="items">
                                <a asp-page="/Shared/BasicInfo/StockSelectorHelper"
                                   asp-route-_sourcePageId="@Model.PG_PageHeaderInfo.PageId"
                                   asp-route-_target="/Orders/StockTransfers/EntityProcess"
                                   asp-route-_handle="AddByFromStock" 
                                   asp-route-_isTsFrom="1"
                                   class="btn btn-primary"
                                   data-toggle="title" title="（快速鍵：Alt + A）"
                                   accesskey="A">
                                    <i class="fa fa-plus"></i>
                                    @WebBaseUI.Form_Btn_AddWithFromStockSelector
                                </a>

                            </div>
                            <div class="items">
                                <div class="from-group">
                                    <button type="submit" asp-page="List" asp-page-handler="Refresh"
                                            onclick="jsPageLoading_Show();"  
                                            accesskey="R" title="（快速鍵：Alt + R）"
                                            class="btn btn-secondary btn-list-control btn-refresh"
                                            data-toggle="tooltip">
                                        @WebBaseUI.Form_Btn_Refresh
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                            <table id="tbList" class="table table-bordered table-striped table-hover">
                                <thead class="k-table-thead">
                                    <tr>

                                        <th class="dt-head-id">
                                            @StockTransferOrder.GetDisplayName(c => c.OrderId)
                                        </th>
                                        <th class="dt-head-date">
                                            @StockTransferOrder.GetDisplayName(c => c.OrderDate)
                                        </th>
                                        <th class="dt-head-name">
                                            @StockTransferOrder.GetDisplayName(c => c.FromStockNo)
                                        </th>
                                        <th class="dt-head-name">
                                            @StockTransferOrder.GetDisplayName(c => c.ToStockNo)
                                        </th>
                                        <th class="dt-head-number">
                                            @StockTransferOrder.GetDisplayName(c => c.TotalQuantity)
                                        </th>
                                        <th class="dt-head-remove">
                                            @WebBaseUI.Form_Btn_Remove
                                        </th>
                                        <th class="dt-head-edit">
                                            @WebBaseUI.Form_Btn_Edit
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{

                                        foreach (var item in Model.PG_List ?? Enumerable.Empty<StockTransferOrderViewModel>())
                                        {
                                            <tr>                                                
                                                <td>
                                                    <a asp-page="EntityProcess" asp-route-_no="@item.OrderNo"
                                                       onclick="jsPageLoading_Show();" title="">
                                                        @item.OrderId
                                                    </a>
                                                </td>
                                                <td>
                                                    @item.OrderDate
                                                </td>
                                                <td>
                                                    @item.FromStockName
                                                </td>
                                                <td>
                                                    @item.ToStockName
                                                </td>
                                                <td>
                                                    @item.TotalQuantity
                                                </td>
                                                <td>
                                                    <a asp-page="EntityProcess" asp-page-handler="Remove" asp-route-_no="@item.OrderNo"
                                                       onclick="jsPageLoading_Show();" title="@item.OrderId">
                                                        <i class="bi-trash"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a asp-page="EntityProcess" asp-page-handler="Edit" asp-route-_no="@item.OrderNo"
                                                       onclick="jsPageLoading_Show();" title="@item.OrderId">
                                                        <i class="bi-pencil-square"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>
                <!-- end card -->
            </div>
        </div>
    </div>



</form>





@section Scripts {
    <script>
        const jsIsAllowEditing = true;

        const dtCI_Id = 0;
        const dtCI_OrderDate = 1;
        const dtCI_FromStock = 2;
        const dtCI_ToStock = 3;
        const dtCI_TotalQuantity = 4;
        const dtCI_Remove = 5;
        const dtCI_Edit = 6;
    </script>
    <script src="~/js/pages/orders/stock-transfer.list.js"></script>

}