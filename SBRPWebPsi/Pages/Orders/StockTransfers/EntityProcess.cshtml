@page "{_no?}"
@model SBRPWebPsi.Pages.Orders.StockTransfers.EntityProcessModel
@{
}




<div class="container-fluid">
    <partial name="~/Pages/Shared/GeneralPages/_PageHeaderPartial.cshtml" model="Model.PG_PageHeaderInfo" />
</div>


<form id="form1" method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">


                <div class="card">
                    <div class="card-header">

                        @if (Model.PG_Info?.FromStock != null)
                        {
                            <partial name="~/Pages/Shared/BriefPartials/_StockBriefPartial.cshtml" model="Model.PG_Info.FromStock" />
                        }
                    </div>
                    <div class="card-body">
                        <div class="form-box">

                            <div asp-validation-summary="ModelOnly" class="dv-Validation-summary">
                                <span></span>
                            </div>

                            @{
                                
                                if (Model.PG_Info != null)
                                {
                                    <partial name="~/Pages/Shared/Orders/_StockTransferOrderEntityPartial.cshtml" model="Model.PG_Info" />

                                    if (Model.PG_Info.FormEditMode != FormEditModeEnum.Read)
                                    {
                                        <div id="dvTabSingleInput">
                                            <div class="p-2 table table-border-radius ">
                                                <div class="">
                                                    <div class="row">
                                                        <div class="form-group col-1">
                                                            <input type="number" id="txtQty_Default" placeholder="件數" class="form-control" />
                                                        </div>
                                                        <div class="form-group col-4">
                                                            <input type="text" class="form-control form-IDField"
                                                                   id="txtProductId_SingleInput"
                                                                   placeholder="請輸入貨號" />
                                                        </div>

                                                        <div class="form-group col-3">
                                                            <button type="button" class="btn btn-primary" id="btnProductId_SingleInput"
                                                                    data-toggle="title" title="（快速鍵：Enter）">
                                                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                                單筆輸入
                                                            </button>
                                                        </div>
                                                        <div class="col-1">
                                                            <button id="btnEdAddDetail" type="button"
                                                                    title="（快速鍵：Alt + A）"
                                                                    class="btn btn-shell btn-adddetail">
                                                                @WebBaseUI.Form_Btn_AddDetailEntry
                                                            </button>
                                                        </div>
                                                    </div>


                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <partial name="~/Pages/Shared/Orders/_StockTransferOrderDetailListEditPartial.cshtml" model="Model.PG_Info.StockTransferOrderDetails" />
                                }
                                else
                                {
                                    <label>Form_MainInfo_Label_NoData</label>
                                }
                            }


                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-function bg-form-control">
                            <div class="items">
                                <div class="form-group">
                                    <button type="button" onclick="history.back(-1);" class="btn btn-dark">
                                        <i class="fa fa-arrow-left"></i>
                                        @WebBaseUI.Form_Btn_Back
                                    </button>
                                </div>
                            </div>

                            <div class="items">
                                <div class="from-group">

                                </div>
                            </div>

                            <!-- Start User operation action -->
                            @{
                                if (Model.PG_Info?.FormEditMode == FormEditModeEnum.Read)
                                {
                                    <div class="items">
                                        <div class="form-group">
                                            <a asp-page="List" class="btn btn-dark">
                                                @WebBaseUI.Form_Btn_BackToList
                                                <i class="fa fa-list"></i>
                                            </a>
                                        </div>
                                    </div>


                                }


                                if (Model.PG_Info?.FormEditMode == FormEditModeEnum.Add)
                                {
                                    <div class="items">
                                        <div class="form-group">
                                            <button id="btnAdd" class="btn btn-primary btn-add"
                                                    onclick="fnSwalBtnConfirmInsert_OnClick('btnInsert');" type="button">
                                                @WebBaseUI.Form_Btn_Insert
                                                <i class="fa fa-plus"></i>
                                            </button>
                                            <button asp-page="EntityProcess" asp-page-handler="Insert"
                                                    disabled id="btnInsert" type="submit" class="d-none">
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                            <!-- End User operation action -->

                        </div>
                    </div>
                    <!-- End card-footer -->
                </div>
            </div>
        </div>
    </div>



</form>



@section Scripts {
    <partial name="_BasePageUIScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/model/product.js"></script>
    <script src="~/js/model/stock-transfer-order-detail.js"></script>
    <script src="~/js/pages/orders/stock-transfer.entity.js"></script>
    <script src="~/js/pages/orders/stock-transfer-detail.listedit.js"></script>

    <script>
        const jsApiToken = '@Model.PG_API_Token';
        const jsApiUrlRoot = '@Model.PG_API_UrlRoot';
        const jsIsAllowRemoving = @(AppSystem.IsDetailAllowRemoving(Model.PG_Info?.FormEditMode).ConvertToJS());
        const jsIsAllowEditing = @(AppSystem.IsDetailAllowEditing(Model.PG_Info?.FormEditMode).ConvertToJS());
        const jsPG_No = @Model.PG_No;
        const jsPG_DraftNo = @Model.PG_DraftNo;

        const jsApiUrlDT = jsApiUrlRoot + '@($"{ApiUrlPath.Orders_StockTransfer_Detail_DataTable}{Model.PG_No}/{Model.PG_DraftNo}")';
        const jsApiUrlED = jsApiUrlRoot + '@ApiUrlPath.Orders_StockTransfer_Detail_Editor';
        const jsApiUrlSI = jsApiUrlRoot + '@($"{ApiUrlPath.Orders_StockTransfer_Detail_SingleInput}{Model.PG_No}/{Model.PG_DraftNo}")';
        const jsApiUrlProductName = jsApiUrlRoot + '@ApiUrlPath.Products_Brief_ProductName';

        let editorList; let dtList;
        var edFieldOptionsData = @Html.Raw(Json.Serialize(Model.PG_EdFieldOptionsList.FieldsList));
        var edFieldOptions = edFieldOptionsData.map(item => new JS_EdFieldModel(item.index, item.name, item.label, item.attr, item.def, item.options, item.required, item.type));

    </script>

}