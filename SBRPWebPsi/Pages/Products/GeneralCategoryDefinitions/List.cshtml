@page
@model SBRPWebPsi.Pages.Products.GeneralCategoryDefinitions.ListModel
@{
}


<div class="container-fluid">
    <partial name="~/Pages/Shared/GeneralPages/_PageHeaderPartial.cshtml" model="Model.PG_PageHeaderInfo" />
</div>



<form id="form1" method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- start card -->
                <div class="card page-card">

                    <div class="card-header">
                       

                        <!--附帶或次要功能連結或按鈕-->
                        <div class="form-function bg-list-control">
                            <div class="items"></div>
                            <div class="items">
                                <a asp-page="EntityProcess" asp-page-handler="Add"
                                   accesskey="A" title="（快速鍵：Alt + A）"
                                   onclick="jsPageLoading_Show();" class="btn btn-secondary btn-list-control btn-add">
                                   @WebBaseUI.Form_Btn_Add
                                </a>

                            </div>
                            <div class="items">
                                <div class="from-group">
                                    <button type="submit" asp-page="List" asp-page-handler="Refresh"
                                            onclick="jsPageLoading_Show();" accesskey="R" 
                                            class="btn btn-secondary btn-list-control btn-refresh"
                                            data-toggle="tooltip" title="（快速鍵：Alt + R）">
                                        @WebBaseUI.Form_Btn_Refresh
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

                            <table id="tbList" class="table table-bordered table-hover table-datatable">
                                <thead class="dt-table-thead">
                                    <tr>
                                        <th class="dt-head-no">
                                            @ProductGeneralCategoryDefinition.GetDisplayName(c => c.PGCOrderNo)
                                        </th>
                                        <th class="dt-head-id">
                                            @ProductGeneralCategoryDefinition.GetDisplayName(c => c.PGCategoryId)
                                        </th>
                                        <th class="dt-head-name">
                                            @ProductGeneralCategoryDefinition.GetDisplayName(c => c.PGCategoryName)
                                        </th>
                                        <th>
                                            @ProductGeneralCategoryDefinition.GetDisplayName(c => c.ItemIdMinLength)
                                        </th>
                                        <th>
                                            @ProductGeneralCategoryDefinition.GetDisplayName(c => c.ItemIdMaxLength)
                                        </th>
                                        <th>
                                            @ProductGeneralCategoryDefinition.GetDisplayName(c => c.PGCOrderNo)
                                        </th>
                                        <th class="dt-head-remove">
                                            @WebBaseUI.Form_Btn_Remove
                                        </th>
                                        <th class="dt-head-edit">
                                            @WebBaseUI.Form_Btn_Edit
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{

                                        foreach (var item in Model.PG_List ?? Enumerable.Empty<ProductGeneralCategoryDefinitionViewModel>())
                                        {
                                            <tr>
                                                <td>
                                                    @item.PGCategoryNo
                                                </td>
                                                <td>
                                                    <a asp-page="EntityProcess" asp-route-_no="@item.PGCategoryNo"
                                                        onclick="jsPageLoading_Show();" title="@item.PGCategoryName">
                                                        @item.PGCategoryId
                                                    </a>
                                                </td>
                                                <td>
                                                    @item.PGCategoryName
                                                </td>
                                                <td>
                                                    @item.ItemIdMinLength
                                                </td>
                                                <td>
                                                    @item.ItemIdMaxLength
                                                </td>
                                                <td>
                                                    @item.PGCOrderNo
                                                </td>
                                                <td>
                                                    <a asp-page="EntityProcess" asp-page-handler="Remove" asp-route-_no="@item.PGCategoryNo"
                                                        onclick="jsPageLoading_Show();" title="@item.PGCategoryName">
                                                        <i class="bi-trash"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a asp-page="EntityProcess" asp-page-handler="Edit" asp-route-_no="@item.PGCategoryNo"
                                                        onclick="jsPageLoading_Show();" title="@item.PGCategoryName">
                                                        <i class="bi-pencil-square"></i>
                                                    </a>
                                                </td>

                                            </tr>
                                        }

                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>
                <!-- end card -->
            </div>
        </div>
    </div>



</form>





@section Scripts {
    <script>
        const jsIsAllowEditing = true;
        const dtCI_No = 0;
        const dtCI_Id = 1;
        const dtCI_Name = 2;
        const dtCI_ItemIdMinLength = 3;
        const dtCI_ItemIdMaxLength = 4;
        const dtCI_OrderNo = 5;
        const dtCI_Remove = 6;
        const dtCI_Edit = 7;

    </script>
    <script src="~/js/pages/products/general-category-definition.list.js"></script>

}