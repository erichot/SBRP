@model (PageHeaderEntity PG_PageHeaderInfo, ProductGeneralCategoryItemViewModel PG_Info, ProductGeneralCategoryDefinitionViewModel PG_PGCD)
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <partial name="~/Pages/Shared/GeneralPages/_PageHeaderPartial.cshtml" model="Model.PG_PageHeaderInfo" />
</div>


<form id="form1" asp-controller="ProductGeneralCategoryItem" method="post">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">


                <div class="card">
                    <div class="card-body">
                        <div class="form-box">

                            <div asp-validation-summary="ModelOnly" class="validation-summary">
                                <span></span>
                            </div>

                            @{
                                if (Model.PG_Info != null)
                                {
                                    <partial name="~/Pages/Shared/Products/_GeneralCategoryItemEntityPartial.cshtml" model="Model.PG_Info" />
                                }
                                else
                                {
                                    <label>Form_MainInfo_Label_NoData</label>
                                }
                            }


                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-function bg-red-lighter">
                            <div class="items">
                                <div class="form-group">
                                    <button type="button" onclick="history.back(-1);" 
                                            accesskey="B"
                                            title="（快速鍵：[Alt] + [B]）"
                                            class="btn btn-dark">                                        
                                        <i class="fa fa-arrow-left"></i>
                                        @WebBaseUI.Form_Btn_Back
                                    </button>
                                </div>
                            </div>

                            <div class="items">
                                <div class="from-group">

                                </div>
                            </div>

                            <!-- Start User operation action -->
                            @{
                                if (Model.PG_Info?.FormEditMode == FormEditModeEnum.Read)
                                {
                                    <div class="items">
                                        <div class="form-group">
                                            <button id="btnRemove" class="btn btn-primary btn-delete"
                                                    onclick="fnSwalBtnConfirmDelete_OnClick('btnDelete');" type="button">
                                                @WebBaseUI.Form_Btn_Delete
                                                <i class="fa fa-trash"></i>
                                            </button>
                                            <button asp-action="Delete"
                                                    disabled id="btnDelete" type="submit" class="d-none">
                                            </button>
                                        </div>
                                    </div>

                                    <div class="items">
                                        <div class="form-group">
                                            <a asp-action="List" asp-route-no="@Model.PG_PGCD.PGCategoryNo"
                                               accesskey="L"
                                               title="（快速鍵：[Alt] + [L]）"
                                               class="btn btn-dark">
                                                @WebBaseUI.Form_Btn_BackToList
                                                <i class="fa fa-list"></i>
                                            </a>
                                        </div>
                                    </div>
                                }


                                if (Model.PG_Info?.FormEditMode == FormEditModeEnum.Add)
                                {
                                    <div class="items">
                                        <div class="form-group">
                                            <button id="btnAdd" class="btn btn-primary btn-add"
                                                    accesskey="I"
                                                    onclick="fnSwalBtnConfirmInsert_OnClick('btnInsert');" type="button">
                                                @WebBaseUI.Form_Btn_Insert
                                                <i class="fa fa-plus"></i>
                                            </button>
                                            <button asp-action="Insert"
                                                    disabled id="btnInsert" type="submit" class="d-none">
                                            </button>
                                        </div>
                                    </div>
                                }

                                if (Model.PG_Info?.FormEditMode == FormEditModeEnum.Edit)
                                {
                                    <div class="items">
                                        <div class="form-group">
                                            <button id="btnEdit" class="btn btn-primary btn-edit"
                                                    title="@WebBaseUI.Form_Btn_Update_Tooltip"
                                                    onclick="fnSwalBtnConfirmUpdate_OnClick('btnUpdate');" type="button">
                                                @WebBaseUI.Form_Btn_Update
                                                <i class="fa fa-save"></i>
                                            </button>
                                            <button asp-action="Update"
                                                    disabled id="btnUpdate" type="submit" class="d-none">
                                            </button>
                                        </div>
                                    </div>
                                }
                            }
                            <!-- End User operation action -->

                        </div>
                    </div>
                    <!-- End card-footer -->
                </div>
            </div>
        </div>
    </div>



</form>



@section Scripts {
    <script src="~/js/pages/products/general-category-item.entity.js"></script>
    <script src="~/js/plugin.form.js"></script>
}